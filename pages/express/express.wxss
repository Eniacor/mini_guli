/* express.wxss */

.express_area {
    padding: 15px;
    background-color: #ffffff;
    display: -webkit-box;
}

.express_area .express_info {
    -webkit-box-flex: 1;
    margin-left: 10px;
}

.express_area .express_info .express_status {
    font-size: 14px;
    color: #313131;
}

.express_area .express_info .express_status .w {
    margin-left: 7px;
}

.express_area .express_info .express_origin {
    margin-top: 5px;
}

.express_area .express_info .express_origin,
.express_area .express_info .express_order {
    color: #959595;
    font-size: 12px;
    line-height: 18px;
}

.express_list {
    padding: 0 15px;
    background-color: #ffffff;
    margin-top: 10px;
}

.express_list_item {
    padding: 15px 0;
    border-bottom: 1rpx solid #e2e2e2;
}

.express_list_item:last-child {
    border-bottom: 0;
}

.express_list_item .content {
    font-size: 12px;
    color: #313131
}

.express_list_item .datetime {
    margin-top: 5px;
    font-size: 12px;
    color: #313131;
}
