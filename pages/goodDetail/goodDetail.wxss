/* pages/goodDetail/goodDetail.wxss */

@import "/common/component/wxParse/wxParse.wxss";
@import "/components/common/stepper.wxss";
@import "/components/common/starList.wxss";
.slide-image {
    width: 750rpx;
    height: 750rpx;
}

.act_cont {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 25rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 28rpx;
    font-weight: 300;
}

.act_cont .info {
    width: 60%;
    height: 60rpx;
    float: left;
}

.act_cont .act_time {
    width: 40%;
    height: 60rpx;
    float: right;
}
.act_end text{
    width: 40%;
    float: left;
    height:60rpx;
    line-height:60rpx;
    text-align: center;
    font-size:24rpx;
    color:#fff
}
.act_cont .act_time text {
    margin-top: 10rpx;
    float: left;
    width: 40rpx;
    height: 40rpx;
    line-height:40rpx;
    text-align: center;
    font-size:24rpx;
}

.act_cont .act_time text.time {
    border: 1rpx solid #fff;
}

.base_info {
    background-color: #ffffff;
    padding: 15px;
}

.base_info .name {
    line-height: 1.4;
    font-size: 32rpx;
    color: #000;
}

.base_info .name .goods_type {
    width: 60rpx;
    height: 34rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 300;
    text-align: center;
    line-height: 34rpx;
    border-radius: 5rpx;
    float: left;
    margin: 3rpx 10rpx 0 0;
}

.base_info .price_system {
    margin: 10px 0;
}

.base_info .price_system .price {
    font-size: 15px;
}

.base_info .price_system .crosse_price {
    font-size: 13px;
    color: #aaa;
    text-decoration: line-through;
    margin-left: 10px;
}

.base_info .ship_price {
    font-size: 13px;
    color: #959595;
    line-height: 1.7;
}

.goods_info_sell {
    width: 750rpx;
    height: 85rpx;
    padding: 22rpx 0;
    box-sizing: border-box;
    margin-top: 20rpx;
    background: #fff;
}

.goods_info_sell .sell_item {
    width: 249rpx;
    float: left;
    text-align: center;
    border-right: 1rpx solid #ddd;
}

.goods_info_sell .sell_item .name {
    font-size: 26rpx;
    color: #999;
    font-weight: 300;
}

.sell_item:last-child {
    border: 0;
}

.select_area {
    height: 45px;
    box-sizing: border-box;
    padding: 0 15px;
    background-color: #ffffff;
    margin: 10px 0;
}

.select_area .select_area_title, .select_area .select_area_content {
    font-size: 14px;
    color: #313131;
}

.select_area .select_area_content {
    padding: 0 10px;
}

.select_area .select_area_jt {
    font-size: 12px;
}

.good_info_bar {
    background-color: #ffffff;
}

.good_info_bar .good_info_bar_item {
    height: 45px;
    box-sizing: border-box;
    border-bottom: 3px solid rgba(0, 0, 0, 0);
}

.good_info_bar .good_info_bar_item:first-child .word {
    border-right: 1rpx solid #e2e2e2;
}

.good_info_bar .good_info_bar_item .word {
    font-size: 15px;
    line-height: 1.5;
    color: #313131;
}

.good_detail_bar .good_detail_bar_block, .good_detail_bar .good_detail_bar_fixed {
    height: 98rpx;
}

.good_detail_bar .good_detail_bar_fixed {
    background-color: #ffffff;
    position: fixed;
    z-index: 100;
    width: 100%;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid #e2e2e2;
}

.good_detail_bar_fixed .item {
    height: 98rpx;
}

.good_detail_bar_fixed .to_customer {
    width: 102rpx;
    border-right: 1rpx solid #dddddd;
}

.good_detail_bar_fixed .to_customer button {
    background-color: transparent;
    border: none;
}

.good_detail_bar_fixed .to_customer button text {
    color: #666;
    font-size: 40rpx;
}

.good_detail_bar_fixed .go_cart {
    width: 102rpx;
    font-size: 40rpx;
    color: #666;
    border-right: 1rpx solid #ddd;
    position: relative;
}

.go_cart .icon-cart {
    font-size: 40rpx;
}

.good_detail_bar_fixed .go_cart .good_detail_cart_num {
    position: absolute;
    color: #ffffff;
    height: 30rpx;
    width: 30rpx;
    border-radius: 30rpx;
    line-height: 30rpx;
    text-align: center;
    top: 8px;
    right: 8px;
    font-size: 20rpx;
}

.good_detail_bar_fixed .collection {
    width: 102rpx;
    font-size: 40rpx;
    border-right: 1rpx solid #ddd;
}

.good_detail_bar_fixed .collection .iconfont {
    color: #666;
    margin-right: 5px;
    font-size: 45rpx;
}

.good_detail_bar_fixed .imm_buy {
    width: 220rpx;
    font-size: 16px;
    color: #313131;
}

.good_detail_bar_fixed .add_cart {
    width: 220rpx;
    font-size: 16px;
    color: #fff;
}

.classify_dialog_container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 200;
    background-color: rgba(0, 0, 0, 0.5);
}

.classify_dialog_container .classify_dialog {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #ffffff;
}

.classify_dialog_container .classify_dialog .dialog_bar {
    height: 45px;
    border-top: 1rpx solid #e2e2e2;
}

.classify_dialog .dialog_bar .imm_buy {
    font-size: 15px;
    color: #ffffff;
}

.classify_dialog .dialog_bar .add_cart {
    font-size: 15px;
    color: #313131;
}

.classify_dialog_info .row {
    padding: 15px;
    border-bottom: 1rpx solid #e2e2e2;
}

.classify_dialog_info .row:last-child {
    border-bottom: 0;
}

.classify_dialog_info .good_info {
    padding: 0 25px 0 15px;
}

.classify_dialog_info .good_close {
    font-size: 15px;
    color: #313131;
}

.classify_dialog_info .good_info {
    align-items: flex-end;
}

.classify_dialog_info .good_info .price {
    font-size: 14px;
}

.classify_dialog_info .good_info .attr_info {
    font-size: 12px;
    color: #313131;
    margin-top: 12px;
}

.classify_dialog_info .attr_name {
    font-size: 15px;
}

.classify_dialog_info .attr_item {
    font-size: 13px;
    height: 26px;
    border: 1rpx solid #e2e2e2;
    color: #313131;
    background-color: #f3f4f5;
    border-radius: 2px;
    margin: 10px 10px 0 0;
    padding: 0 10px;
}

.classify_dialog_info .attr_item.active {
    color: #ffffff;
}

.classify_dialog_info .attr_item.disable {
    background-color: #ffffff;
    color: #959595;
    border: 1rpx dashed #959595;
}

.active_tip {
    height: 14px;
    line-height: 12px;
    font-size: 8px;
    color: #e60012;
    padding: 0 2px;
    border: 1rpx solid #e60012;
    margin-left: 10px;
    box-sizing: border-box;
}

.hot_tip {
    height: 14px;
    line-height: 14px;
    font-size: 8px;
    color: #fff;
    width: 20px;
    text-align: center;
    margin-left: 10px;
}

.eval_list {
    background-color: #ffffff;
    padding-bottom: 50px;
}

.eval_list .eval_footer {
    font-size: 15px;
    color: #959595;
    text-align: center;
    padding: 15px 0;
}

.eval_item {
    padding: 0 15px;
}

.eval_item:last-child .eval_item_inner {
    border-bottom: 0;
}

.eval_item .eval_item_inner {
    border-bottom: 1rpx solid #e2e2e2;
    padding: 15px 0;
}

.eval_item .good_evaluation_item_info {
    margin-left: 18px;
}

.eval_item .user_name {
    font-size: 14px;
    color: #313131;
}

.eval_item .evaluation_time {
    font-size: 12px;
    color: #959595;
    text-align: right;
}

.eval_item .evaluation_content {
    font-size: 13px;
    color: #313131;
    margin-top: 7px;
}

.eval_item .evaluation_image {
    margin-top: 7px;
}

.eval_item .image_item {
    height: 120rpx;
    margin-right: 12px;
}

.eval_item .image_item:last-child {
    margin-right: 0;
}

.eval_item .star_outer {
    margin-top: 7px;
}

.good_desc {
    background-color: #ffffff;
}