<view class="head">
    <view class="head_title">
        <image src="/images/static/index_exercise_true.png" />
        <text>{{task.practice.title}}</text>
    </view>
    <view class="head_content">{{task.practice.intro}}</view>
</view>
<view class="list">
    <view class="list_title">
        <text class="title_line"></text>
        <text class="title_txt">任务列表</text>
    </view>
    <view class="list_contents">
        <view class="content" wx:if="{{task.task_list.length>0}}" bindtap="skipPage" data-url="/pages/index/exercise/detail/list/index?id={{item.id}}" data-type="0" wx:for="{{task.task_list}}" wx:key="unique">
            <view class="content_left">{{item.title}}</view>
            <view class="content_right">
                <image src="/images/static/index_exercise_arrow.png" />
            </view>
        </view>
        <view class="empty" wx:if="{{task.task_list.length==0}}">
            暂无任务  
        </view>
    </view>
</view>
<view class="bottom">
    <view class="bottom_left" bindtap="skipPage" data-url="/pages/index/exercise/index" data-type="0" >其他练习</view>
    <view class="bottom_right">
        <button open-type="share">邀请好友</button>
    </view>
</view>
<view class="left" bindtap="handleCollect" data-id="{{id}}" wx:if="{{collect==1}}">
    <image src="/images/static/lcanga.png" />
</view>
<view class="left" bindtap="handleCollect" data-id="{{id}}" wx:if="{{collect==0}}">
    <image src="/images/static/index_exercise_cang.png" />
</view>