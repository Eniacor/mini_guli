.items .item {
  width: 610rpx;
  height: 170rpx;
  margin: 0 auto;
  margin: 30rpx 30rpx 0 30rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}
.items .item .item_title {
  height: 32rpx;
  line-height: 32rpx;
}
.items .item .item_title .title_line {
  float: left;
  width: 12rpx;
  height: 32rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background: #d43c33;
}
.items .item .item_title .title_txt {
  float: left;
  font-size: 32rpx;
  color: #d43c33;
  font-weight: 600;
}
.items .item .item_content {
  margin-top: 46rpx;
  position: relative;
}
.items .item .item_content .content_left {
  position: absolute;
  top: 6rpx;
  left: 0;
  width: 80rpx;
  height: 80rpx;
}
.items .item .item_content .content_left image {
  width: 100%;
  height: 100%;
}
.items .item .item_content .content_middle {
  position: absolute;
  top: 18rpx;
  left: 120rpx;
  width: 1rpx;
  height: 56rpx;
  background: #666;
}
.items .item .item_content .content_right {
  position: absolute;
  top: 0;
  left: 161rpx;
}
.items .item .item_content .content_right .right_title {
  display: inline-block;
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 10rpx;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
}
.items .item .item_content .content_right .backcolor_yellow {
  background: #face64;
}
.items .item .item_content .content_right .backcolor_blue {
  background: #85afec;
}
.items .item .item_content .content_right .backcolor_green {
  background: #70b8ac;
}
.items .item .item_content .content_right .backcolor_purple {
  background: #a96dc9;
}
.items .item .item_content .content_right .right_des {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #222;
}
