<view class="index">
  <view class="top">
    <view class="top_left">每日福利</view>
    <button class="top_right" open-type="share">分享给朋友</button>
  </view>
  <view class="list">
    <view class="item" wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="index">
      <navigator url="/pages/detail/index?id={{item.id}}">
        <view class="item_img">
          <image mode="scaleToFill" class="img" src="{{item.img}}" />
        </view>
        <view class="item_content">
          <view class="content_title">奖品：{{item.name}}x{{item.num}}</view>
          <view class="content_start">{{item.way_name}}</view>
        </view>
      </navigator>
    </view>
  </view>
</view>