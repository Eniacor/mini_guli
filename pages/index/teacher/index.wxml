<view class="teachers">
    <view wx:for="{{famous}}" wx:key="unique">
        <view class="teacher" bindtap="skipPage" data-url="/pages/index/teacher/detail/index?id={{item.id}}" data-type="0">
            <view class="teacher_top">
                <view class="top_left">
                    <image src="{{item.avatarurl}}" />
                </view>
                <view class="top_right">
                    <view class="title"></view>
                    <view class="tags">
                        <text class="tag backcolor_yellow">{{item.tag1}}</text>
                        <text class="tag backcolor_blue">{{item.tag2}}</text>
                        <text class="tag backcolor_green">{{item.tag3}}</text>
                    </view>
                </view>
            </view>
            <view class="teacher_middle">
                {{item.desc}}
            </view>
            <view class="teacher_bottom">
                <text>免费预约</text>
                <image src="/images/static/index_teacher_more.png" />
            </view>
        </view>
    </view>
</view>