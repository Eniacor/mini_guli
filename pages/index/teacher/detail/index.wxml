<view class="teachers" >
    <view class="teacher" style="margin-bottom:98rpx;">
        <view class="teacher_top">
            <view class="top_left">
                <image src="{{famous.avatarurl}}" />
            </view>
            <view class="top_right">
                <view class="title">{{famous.realname}}
                </view>
                <view class="tags">
                    <text class="tag backcolor_yellow">{{famous.tag1}}</text>
                    <text class="tag backcolor_blue">{{famous.tag2}}</text>
                    <text class="tag backcolor_green">{{famous.tag3}}</text>
                </view>
            </view>
        </view>
    </view>
    <import src="../../../../common/component/wxParse/wxParse.wxml" />
    <view class="wxParse">
        <template is="wxParsec" data="{{wxParseData:article.nodes}}" />
    </view>
    <view  class="bottom">
        <view class="bottom_item" bindtap="skipPage" data-url="/pages/index/teacher/order/index" data-type="0">免费分析成绩单</view>
        <view class="bottom_item" bindtap="skipPage" data-url="/pages/index/teacher/counsel/index" data-type="0">免费预约名师咨询</view>
    </view>
</view>