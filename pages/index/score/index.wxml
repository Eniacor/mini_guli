<view class="score">
    <view class="score_head">
        <image src="{{imgUrl[0].banner_img}}" />
    </view>
    <view class="score_content" wx:for="{{score}}" wx:key="unique" wx:for-item="items" wx:if="{{items!=null}}"> 
        <view class="content_title">
            <text class="title_line"></text>
            <text class="title_txt">{{month[index]}}月高分榜</text>
        </view>
        <view class="items">
                <view class="item"  wx:for="{{items}}" wx:for-index="indexc" wx:key="unique">
                    <view class="item_left">
                        <image src="{{item.img}}" />
                    </view>
                    <view class="item_right">
                        <view class="right_title">
                            <text>【{{item.number}}】</text>
                            {{item.title}}
                        </view>
                        <view class="right_sub">{{item.subtitle}}</view>
                        <view class="tags">
                            <text class="tag backcolor_yellow">{{item.tag1}}</text>
                            <text class="tag backcolor_blue">{{item.tag2}}</text>
                            <text class="tag backcolor_green">{{item.tag3}}</text>
                        </view>
                        <view class="time">
                            <view class="time_left">
                                <image src="/images/static/index_score_time.png" />
                                <text>{{item.addtime}}</text>
                            </view>
                            <view class="time_right" bindtap="skipPage" data-url="/pages/index/score/detail/index?id={{item.id}}&month={{month[index]}}" data-type="0">
                                <text>查看详情</text>
                                <image src="/images/static/index_score_more.png" />
                            </view>
                        </view>
                    </view>
                </view>
        </view>
    </view>
</view>