
.swiper{
    width: 750rpx;
    height: 400rpx;
}
image{
    width: 750rpx;
    height: 400rpx;
}
.nav{
    width: 748rpx;
    height: 122rpx;
    padding:40rpx 1rpx;
    background: #fff;
}
.nav_item{
    display: inline-block;
    width: 187rpx;
    height: 202rpx;
}
.item_img{
    text-align: center;
}
.item_img image{
    width:92rpx;
    height: 92rpx;
    vertical-align:middle;
}
.item_text{
    font-size: 24rpx;
    color: #222;
    text-align: center;
    line-height: 1;
    margin-top: 20rpx;
}
.contact{
    font-size: 24rpx;
    color: #222;
    display:static;
    margin:0;
    padding:0;
    line-height:1;
    background: #fff;
}
.content{
    height: 450rpx;
    width: 720rpx;
    margin:15rpx;
}
.content_item{
    position: relative;
    display: inline-block;
    width: 330rpx;
    height:180rpx;
    line-height: 180rpx;
    border-radius: 10rpx;
    margin:15rpx;
    background: #fff;
    border-bottom: 1rpx solid #e0e0e0;
}
.content_item:last-child{
    border: 0;
}
.content_item .item_img{
    display: inline-block;
}
.content_item .item_img image{
    width: 86rpx;
    height: 86rpx;
    margin-left: 34rpx;
    margin-right: 20rpx; 
}
.content_item .item_line{
    position: absolute;
    top: 63rpx;
    left: 142rpx;
    width: 2rpx;
    height: 54rpx;
    background: #e0e0e0;
}
.content_item .item_text1{
    display: inline-block;
    font-size: 32rpx;
    font-weight: 200;
    margin-left: 20rpx;
}
.score_header{
    width: 750rpx;
    height: 87rpx;
    text-align: center;
    background: #fff;
    border-bottom: 1rpx solid #e0e0e0;
    padding-top: 36rpx;
    padding-bottom: 40rpx;
}
.header_title{
    line-height: 1;
}
.header_title image{
    width:40rpx;
    height: 36rpx; 
    margin-right: 18rpx;
}
.header_title text{
    font-size: 34rpx;
    font-weight: bold;
    color:#222;
}
.score_header .header_des{
    margin-top:20rpx;
    font-size: 26rpx;
    line-height: 1;
    color:#222;
}
.score{
    background: #fff;
}
.score_content{ 
    width: 690rpx;
    margin:0 30rpx;
    height: 112rpx;
    line-height: 112rpx;
    border-bottom: 1rpx solid #e0e0e0;
}
.score_content:last-child{
    border: 0;
}
.score_content .content_left{
   display: inline-block;
}
.score_content .content_left image{
    width:36rpx;
    height:32rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}
.content_middle{
   display: inline-block;
   font-size: 30rpx;
   color:#222;
}
.content_right{
    font-family: 'mini';
    display: inline-block;
    margin-left: 20rpx;
    font-size: 44rpx;
    color:#dd4048;
    vertical-align: middle;
    float:right;
    font-weight: bold;
    
 }
 .score_bottom{
    width:750rpx;
    height:89rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 28rpx;
    color:#c4483c;
    background: #fff;
    border-top: 1rpx solid #e0e0e0;
}
.tech{
    width: 750rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 20rpx;
    color:#888;
} 

