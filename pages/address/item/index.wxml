<view class="address">
    <van-cell-group>
        <van-field
            value="{{ username }}"
            label="姓名"
            clearable
            placeholder="输入收件人姓名"
            bind:change="onChangeName"
        />
        <van-field
            value="{{phone}}"
            label="手机号码"
            clearable
            placeholder="输入手机号码"
            bind:change="onChangPhone"
        />
        <van-field wx:if="{{province!=''}}"
            value="{{province}}、{{city}}、{{area}}"
            label="所在区域"
            clearable
            placeholder="选择所在的省份、城市、区县"
            icon="location"
            bind:click-icon="onClickIconL"
        />
        <van-field wx:else
            value="{{province}}"
            label="所在区域"
            clearable
            placeholder="选择所在的省份、城市、区县"
            icon="location"
            bind:click-icon="onPopupOpen"
        />
        <van-field
            value="{{address }}"
            label="详细地址"
            clearable
            placeholder="街道、楼牌号等详细地址"
            bind:change="onChangAddress"
        />
        <van-field
            value="{{post}}"
            label="邮政编码"
            clearable
            placeholder="输入邮政编码"
            border="{{false}}"
            bind:change="onChangPost"
        />
    </van-cell-group>
    <van-popup  position="bottom" show="{{show}}" bind:close="onClose">
        <van-area area-list="{{areaList}}"  bind:confirm="onAreaConfirm" bind:cancel="onAreaCancel"/>
    </van-popup>
    <van-button class="btn" sizetype="default"  bind:click="handleData">添加地址</van-button>
</view>