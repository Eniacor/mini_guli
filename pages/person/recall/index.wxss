.recall .recall_search {
  position: relative;
  padding: 10rpx 30rpx 20rpx 30rpx;
  height: 66rpx;
  background: #d43c33;
}
.recall .recall_search input {
  position: absolute;
  top: 10rpx;
  left: 30rpx;
  height: 66rpx;
  width: 690rpx;
  border-radius: 8rpx;
  background: #fff;
  font-size: 28rpx;
  color: #aaa;
  padding-left: 58rpx;
  z-index: 1;
}
.recall .recall_search image {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 26rpx;
  height: 26rpx;
  z-index: 100;
}
.recall .recall_my .my {
  padding: 0 30rpx;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 32rpx;
  color: #222;
  border-bottom: 1rpx solid #e0e0e0;
  background: #fff;
}
