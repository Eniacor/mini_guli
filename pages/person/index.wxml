<view class="border">
    <view class="header">
        <view class="user-image-tou">
            <open-data type="userAvatarUrl"></open-data>
        </view>
        <view class="user-border">
            <view class="user-name">
                <open-data type="userNickName"></open-data>
            </view>
        </view>
    </view>
  
    <view class="section-menu">
        <navigator hover-class="none" url="/pages/list/index?type=1">
            <view class="width-4">
                <view class="class-number">
                    {{all}}
                </view>
                <view class="class-title">
                    全部抽奖
                </view>
            </view>
        </navigator>
        <navigator hover-class="none" url="/pages/list/index?type=2">
            <view class="width-4">
                <view class="class-number">
                    {{my}}
                </view>
                <view class="class-title">
                    发起抽奖
                </view>
            </view>
        </navigator>
        <navigator hover-class="none" url="/pages/list/index?type=3">
            <view class="width-4">
                <view class="class-number">
                    {{zhong}}
                </view>
                <view class="class-title">
                    中奖记录
                </view>
            </view>
        </navigator>
    </view>
    <navigator hover-class="none" url="/pages/address/index">
       <van-cell icon="location" is-link>
            <view slot="title">
                <span class="van-cell-text">收货地址</span>
                <van-tag type="danger"></van-tag>
            </view>
        </van-cell>
    </navigator>
    <navigator hover-class="none" url="/pages/address/index">
       <van-cell icon="info-o" is-link>
            <view slot="title">
                <span class="van-cell-text">使用规则</span>
                <van-tag type="danger"></van-tag>
            </view>
        </van-cell>
    </navigator>
    <navigator hover-class="none" url="/pages/address/index">
       <van-cell icon="contact" is-link>
            <view slot="title">
                <span class="van-cell-text">联系我们</span>
                <van-tag type="danger"></van-tag>
            </view>
        </van-cell>
    </navigator>
    <navigator hover-class="none" url="/pages/address/index">
       <van-cell icon="question" is-link>
            <view slot="title">
                <span class="van-cell-text">常见问题</span>
                <van-tag type="danger"></van-tag>
            </view>
        </van-cell>
    </navigator>
</view>