Page {
    background: #f7f7f7;
}

.container .head {
    width: 100%;
    padding: 30rpx 24rpx;
    height: 163rpx;
    box-sizing: border-box;
    background: #fff;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    float: left;
    border-radius: 100rpx;
}

.container .head .user_info {
    float: left;
    width: 170rpx;
    margin-left: 30rpx;
}

.container .head .user_info text {
    display: block;
    font-size: 26rpx;
}

.container .head .user_info .nickname {
    font-size: 26rpx;
}

.container .head .user_info .level {
    margin-top: 15rpx;
    color: #f3c800;
    border: 1px solid #f3c800;
    border-radius: 20rpx;
    text-align: center;
}

.personal_func_list {
    width: 750rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    margin-top: 20rpx;
    box-sizing: border-box;
}

.personal_func_list .personal_func_item {
    border-bottom: 1rpx solid #ddd;
    height: 90rpx;
}

.personal_func_list .personal_func_item .content {
    font-size: 30rpx;
    color: #a6a6a6;
    font-weight: 300;
    margin-right: 10rpx;
}

.personal_func_list .personal_func_item .iconfont {
    font-size: 14px;
    color: #a6a6a6;
}

.personal_func_list .personal_func_item:last-child {
    border-bottom: 0;
}

.personal_func_list .personal_func_item .icon {
    width: 60rpx;
    text-align: left;
    font-size: 38rpx;
    color: #313131;
}

.personal_func_list .personal_func_item .name {
    font-size: 30rpx;
    color: #333;
}

.personal_func_list .personal_func_item .enter_icon {
    width: 40px;
    font-size: 17px;
    color: #959595;
    text-align: center;
}
.mask{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background: rgba(0,0,0,0.6);

}
.sex_content{
    position: absolute;
    bottom:0;
    left:0;
    z-index:9;
    width:100%;
    background: #fff;
}
.sex{
    width:100%;
    height: 90rpx;
    line-height: 90rpx;
    color:#333;
    font-size:30rpx;
    text-align: center;
    border-bottom:1rpx solid #e2e2e2;
}
.show{
    display: block;
}
.unshow{
    display: none;
}