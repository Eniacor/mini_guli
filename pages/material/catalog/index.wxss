.score .score_content .items .item {
  margin: 0 30rpx;
  padding: 40rpx 0;
  height: 120rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
.score .score_content .items .item .item_left {
  float: left;
  width: 160rpx;
  height: 120rpx;
}
.score .score_content .items .item .item_left image {
  width: 100%;
  height: 100%;
  background: #d43c33;
}
.score .score_content .items .item .item_right {
  float: left;
  width: 510rpx;
  margin-left: 20rpx;
  position: relative;
}
.score .score_content .items .item .item_right .right_title {
  height: 30rpx;
  width: 520rpx;
  line-height: 30rpx;
  font-size: 30rpx;
}
.score .score_content .items .item .item_right .time {
  overflow: hidden;
  margin-top: 50rpx;
}
.score .score_content .items .item .item_right .time .time_left {
  float: left;
  height: 22rpx;
  margin-top: 19rpx;
}
.score .score_content .items .item .item_right .time .time_left image {
  float: left;
  height: 20rpx;
  width: 19rpx;
  margin-right: 12rpx;
}
.score .score_content .items .item .item_right .time .time_left text {
  float: left;
  height: 22rpx;
  line-height: 22rpx;
  font-size: 22rpx;
  color: #d43c33;
}
.score .score_content .items .item .item_right .time .time_right {
  float: right;
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 12rpx;
}
.score .score_content .items .item .item_right .time .time_right text {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 26rpx;
  color: #d43c33;
  margin-right: 12rpx;
}
.score .score_content .items .item .item_right .time .time_right image {
  width: 20rpx;
  height: 18rpx;
}
.score .score_content .items .item:last-child {
  border-bottom: 0;
}
