<view class="head">
    <view class="head_left back_color">RA</view>
    <view class="head_middle">Read Aloud</view>
    <view class="head_right title_color">答题记录</view>
</view>
<view class="search">
    <view class="search_left">
        <text class="text active">按更新时间</text>
        <text class="triangle_bottom tactive"></text>
    </view>
    <view class="search_middle">
        <text class="text">按确认考过</text>
        <text class="triangle_bottom"></text>
    </view>
    <view class="search_right">
        <text class="btn">搜索</text>
        <input class="input" placeholder="#" auto-focus />
    </view>
</view>
<view class="list_contents">
    <view wx:for="{{data}}" wx:key="unique">
        <view class="content" bindtap="skipPage" data-url="/pages/material/list/dati/index?id={{item.id}}" data-type="0">
            <view class="content_head">
                <text class="head_left backcolor_yellow">#{{item.id}}</text>
                <text class="head_middle">{{item.title}}</text>
                <i-cell title="禁用点击和手势选择星" class="star">
                    <i-rate disabled="{{true}}" value="{{4}}"></i-rate>
                </i-cell>
            </view>
            <view class="content_middle">{{item.content}}</view>
            <view class="content_bottom">
                <view class="bottom_left">
                    <image src="/images/static/index_score_time.png" />
                    <text>{{item.addtime}}</text>
                </view>
                <view class="bottom_right">
                    <image src="/images/static/index_recall_detailm.png" />
                    <text>{{item.comment_num}}</text>
                </view>
                <view class="bottom_middle">{{item.confirm_num}}人确认考过</view>
            </view>
        </view>
    </view>
</view>