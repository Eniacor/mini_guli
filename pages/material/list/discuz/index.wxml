<view class="discuz">
    <view class="discuz_top">
        <textarea class="text" maxlength="300"  bindblur="handleText" style="font-size:30rpx;color:#888;"></textarea>
        <text>0/300</text>
    </view>
    <view class="discuz_content">
        <view class="content_audio">
            <image src="" />
            <text>{{time?time:"暂无录音"}}"</text>
        </view>
        <view class="content_right" wx:if="{{status==1}}"bindtap="handleStart">开始录音</view>
        <view class="content_right" wx:else bindtap="handleStop">结束录音</view>
    </view>
    <view class="discuz_bottom" bindtap="handleData">提交</view>
</view>