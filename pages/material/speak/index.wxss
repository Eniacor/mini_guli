.speak .header {
  position: relative;
  width: 750rpx;
  height: 204rpx;
  background: #fff;
}
.speak .header .header_left {
  position: absolute;
  top: 62rpx;
  left: 60rpx;
}
.speak .header .header_left image {
  width: 64rpx;
  height: 64rpx;
}
.speak .header .header_middle {
  position: absolute;
  top: 74rpx;
  left: 129rpx;
  width: 1rpx;
  height: 56rpx;
  background: #666;
}
.speak .header .header_right {
  position: absolute;
  top: 60rpx;
  left: 150rpx;
}
.speak .header .header_right .right_title {
  width: 128rpx;
  height: 43rpx;
  line-height: 43rpx;
  text-align: center;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  padding: 0 5rpx;
}
.speak .header .header_right .right_title-backcolor {
  background: #face64;
}
.speak .header .header_right .right_sub {
  font-size: 26rpx;
  line-height: 26rpx;
  margin-top: 16rpx;
  color: #666;
}
.speak .content {
  padding: 15rpx 15rpx;
}
.speak .content .content_item {
  display: inline-block;
  width: 330rpx;
  height: 115rpx;
  margin: 15rpx 15rpx;
  border-radius: 8rpx;
  background: #fff;
  padding-top: 40rpx;
}
.speak .content .content_item .item_title {
  width: 62rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 4rpx;
  margin: 0 auto;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  background: #face64;
}
.speak .content .content_item .item_sub {
  line-height: 26rpx;
  font-size: 26rpx;
  text-align: center;
  margin-top: 20rpx;
}
