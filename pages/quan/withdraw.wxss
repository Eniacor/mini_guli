page {
    background: #f9f9f9;
    height: 100%;
}

.content {
    width: 750rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.quan_input {
    width: 100%;
    padding: 20rpx;
    height: 80rpx;
    box-sizing: border-box;
    border: 1rpx solid #ddd;
    font-size: 28rpx;
}

.methods {
    margin-top:30rpx;
}
.methods .info{
    color:#999;
    font-size:24rpx;
}
.weixin{
    margin-top:10rpx;
    border:1rpx solid #ddd;
    padding:15rpx;
    font-size:28rpx;
}
.weixin text{
    display: inline-block;
}
.weixin .iconfont{
    vertical-align: middle;
}
.weixin .type{
    font-size:28rpx;
    color:#999;
    margin-left:10rpx;
}
.submit_withdraw {
    margin-top: 50rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
    border-radius: 10rpx;
}
radio{
    transform: scale(0.7);
    float:right;
}
.intro {
    margin-top: 40rpx;
}

.intro text {
    display: block;
    width: 100%;
    font-size: 28rpx;
    color: #999;
    margin: 10rpx;
}

.intro .title {
    font-size: 34rpx;
    color: #333;
    margin-bottom: 20rpx;
}