/* * pages/mine/index.wxss */

page {
    width: 100%;
    background: #f0f0f0
}

.personal_info {
    width: 100%;
    height: 280rpx;
    position: relative;
}

.header_bg {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 280rpx;
    box-sizing: border-box;
}

.header_bg image {
    width: 100%;
    height: 280rpx;
}

.personal_info .inner {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 750rpx;
    height: 280rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.setting {
    width: 750rpx;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
}

.personal_info .inner .cover {
    float: left;
}

.personal_info .inner .nickname {
    width: 170rpx;
    float: left;
    margin-left: 40rpx;
    height: 140rpx;
}

.personal_info .inner .nickname .name {
  width:250rpx;
    text-align: left;
}

.personal_info .inner .nickname text {
    width: 170rpx;
    display: block;
}

.personal_info .inner .nickname .grade {
    margin-top: 20rpx;
    color: #f3c800;
    border: 1px solid #f3c800;
    border-radius: 20rpx;
    text-align: center;
}

.personal_info .inner .cover image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 110rpx;
    margin: 0 auto;
    display: block;
}

.personal_info .inner .nickname {
    color: #fff;
    font-size: 16px;
}

.personal_func_list {
    width: 750rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    margin-top: 20rpx;
    box-sizing: border-box;
}

.personal_func_list .personal_func_item {
    border-bottom: 1rpx solid #ddd;
    height: 90rpx;
}

.personal_func_list .personal_func_item .content {
    font-size: 30rpx;
    color: #a6a6a6;
    font-weight: 300;
    margin-right: 10rpx;
}

.personal_func_list .personal_func_item .iconfont {
    font-size: 14px;
    color: #313131;
}

.personal_func_list .personal_func_item:last-child {
    border-bottom: 0;
}

.personal_func_list .personal_func_item .icon {
    width: 60rpx;
    text-align: left;
    font-size: 38rpx;
    color: #313131;
}

.personal_func_list .personal_func_item .name {
    font-size: 30rpx;
    color: #333;
}

.personal_func_list .personal_func_item .enter_icon {
    width: 40px;
    font-size: 17px;
    color: #959595;
    text-align: center;
}
.usr_info{
    width:100%;
}
.mine_card {
    width: 750rpx;
    height: 120rpx;
    background: #fff;
}

.mine_card .card_block {
    width: 187.5rpx;
    height: 120rpx;
    float: left;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.user-right {
    float: right;
    color: #fff;
    line-height: 140rpx;
}

.card_block {
    text-align: center
}

.card_block text {
    display: block;
}

.card_block .card_type {
    font-size: 26rpx;
    color: #333;
}

.card_block .card_num {
    font-size: 30rpx;
    color: #ab2b2b;
}

.personal_func_order {
    width: 750rpx;
    height: 140rpx;
    background: #fff;
}

.order_item {
    float: left;
    width: 150rpx;
    height: 140rpx;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.order_item image {
    width: 42rpx;
    height: 40rpx;
    margin: 0 auto;
    text-align: center;
}

.order_item text {
    margin-top: 15rpx;
    display: block;
    font-size: 24rpx;
    color: #333;
    text-align: center;
}

.order_item .box {
    position: relative;
}

.order_item .box .order_num {
    position: absolute;
    right: -4rpx;
    top: -30rpx;
    width: 35rpx;
    height: 35rpx;
    line-height: 35rpx;
    background: #ab2b2b;
    color: #fff;
    font-size: 20rpx;
    text-align: center;
    border-radius: 35rpx
}

.contact_btn {
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
}