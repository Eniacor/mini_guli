<view class="teachers" style="margin-bottom:98rpx;">
    <view class="top">
        <view class="top_banner">
            <image src="{{famous.content_img}}" />
        </view>
        <view class="top_title">
            <view class="title_left">{{famous.title}}</view>
            <view class="title_right" wx:if="{{famous.is_hot==1}}">HOT</view>
        </view>
        <view class="top_tags">
            <text class="tag backcolor_yellow">{{famous.tag1}}</text>
            <text class="tag backcolor_blue">{{famous.tag2}}</text>
            <text class="tag backcolor_green">{{famous.tag3}}</text>
        </view>
        <view class="top_bao">
            <view class="bao_left">
                <image class="icon" src="/images/static/course_u.png" />
                <text>{{famous.lecturer}}</text>
            </view>
            <view class="bao_right">
                <image class="icon" src="/images/static/course_a.png" style="width:24rpx;height:28rpx;" />
                <text>{{famous.campus}}</text>
            </view>
        </view>
        <view class="top_bao1">
            <view class="bao_left">
                <text>限时优惠:</text>
                <text style="color:#d43c33;margin-left:6rpx;">{{famous.discount}}</text>
            </view>
            <view class="bao_right">
                <image class="icon" src="/images/static/lri.png" />
                <text>{{famous.activity_time}}</text>
            </view>
        </view>
    </view>
    <import src="../../../common/component/wxParse/wxParse.wxml" />
    <view class="wxParse">
        <template is="wxParsec" data="{{wxParseData:article.nodes}}" />
    </view>
    <view class="recom">
        <view class="recom_title">
            <text class="title_line"></text>
            <text class="title_txt">相关推荐</text>
        </view>
        <view class="recom_contents">
             <view class="content"  bindtap="skipPage" data-url="/pages/person/product/detail/index?id={{rgood[0].id}}">
                <view class="content_img">
                    <image src="{{rgood[0].title_img1}}" />
                </view>
                <view class="content_txt">{{rgood[0].title}}</view>
            </view>
             <view class="content" bindtap="skipPage" data-url="/pages/person/product/detail/index?id={{rgood[1].id}}">
                <view class="content_img">
                    <image src="{{rgood[1].title_img1}}" />
                </view>
                <view class="content_txt">{{rgood[1].title}}</view>
            </view>
             <view class="content" bindtap="skipPage" data-url="/pages/person/product/detail/index?id={{rgood[2].id}}">
                <view class="content_img">
                    <image src="{{rgood[2].title_img1}}" />
                </view>
                <view class="content_txt">{{rgood[2].title}}</view>
            </view>
        </view>
    </view>
</view>
<view class="bottom">
    <view class="bottom_left" data-type="0" >
        <button class="yao" open-type="share"> 邀请好友</button>
    </view>
    <view class="bottom_right">
        <button class="ma" open-type="contact">马上报名</button>
    </view>
</view>
<view class="left" bindtap="handleCollect" data-id="{{id}}" wx:if="{{iscang==0}}">
    <image src="/images/static/index_exercise_cang.png" />
</view>
<view class="left" bindtap="handleCollect" data-id="{{id}}"  wx:if="{{iscang==1}}">
    <image src="/images/static/lcanga.png" />
</view>



