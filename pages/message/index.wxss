Page{
    background: #f0f0f0;
}
.message_list{
    width:100%;
    height:100rpx;
    padding:0 24rpx; 
    box-sizing: border-box;       
}
.message_time{
    width:750rpx;
    text-align: center;
    color:#aaa;
    box-sizing: border-box;
    font-size:24rpx;
    margin-top:30rpx;

}
.message_content{
    position: relative;
    margin-top:30rpx;
    padding:20rpx;
    background: #fff;
    color:#333;
    font-size:26rpx;
    box-sizing: border-box;    
    border-radius:10rpx;


}
.noread{
    position: absolute;
    right:10rpx;
    top:10rpx;
    z-index:2;
    width:10rpx;
    height: 10rpx;
    background: #ab2b2b;
    border-radius: 10rpx;
}