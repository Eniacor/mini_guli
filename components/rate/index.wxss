.i-rate {
    margin: 0;
    padding: 0;
    font-size: 20px;
    display: inline-block;
    vertical-align: middle;
    font-weight: 400;
    font-style: normal
}

.i-rate-hide-input {
    display: none
}

.i-rate-star {
    display: inline-block;
    color: #e9e9e9
}

.i-rate-current.color2{
    color: #85afec;
}
.i-rate-current.color1{
    color: #f5a623
}
.i-rate-current.color3{
    color:#80b6ac;
}
.i-rate-current.color4{
    color: #a072c4;
}

.i-rate-text {
    display: inline-block;
    vertical-align: middle;
    margin-left: 6px;
    font-size: 14px
}